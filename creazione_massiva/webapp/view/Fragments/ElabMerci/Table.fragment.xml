<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns="sap.m"
>
    <Table id="tableMerci"
        items="{odaDocs>/dati}"
        headerText="{= ${filterModel>/simulazione} ? ${i18n>tableH2} + ' ' + ${i18n>modSim} : ${i18n>tableH2} }"
        alternateRowColors="true"
        visible="false"
        class="sapUiMediumMarginTop"
    >
        <columns>
            <Column hAlign="Center">
                <Text text="{i18n>Stato}" />
            </Column>
            <Column hAlign="Center">
                <Text text="{i18n>TpDoc}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>codForn}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>orgAcq}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>grpAcq}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>TpPos}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>TpCont}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>codMat}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>descr}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>TestoBreve}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>qta}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>um}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>prz}" />
            </Column>
            <Column width="6rem" hAlign="Center" demandPopin="true">
                <Text text="{i18n>consegna}" />
            </Column>
            <Column hAlign="Center" demandPopin="true" width="110px">
                <Text text="{i18n>ordAcq}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>pos}" />
            </Column>
            <Column hAlign="Center" demandPopin="true" width="110px">
                <Text text="{i18n>entrMer}" />
            </Column>
            <Column hAlign="Center" demandPopin="true">
                <Text text="{i18n>pos2}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                
            >
                <cells>
                    <core:Icon press=".onIconPress" src="{odaDocs>semaforo}" size="1.3rem" color="{odaDocs>color}"/>
                    <Text text="{odaDocs>tpDoc}" />
                    <Text text="{odaDocs>forn}" />
                    <Text text="{odaDocs>orgAcq}" />
                    <Text text="{odaDocs>grpAcq}" />
                    <Text text="{odaDocs>tpPos}" />
                    <Text text="{odaDocs>tpCont}" />
                    <Text text="{odaDocs>codMat}" />
                    <Text text="{odaDocs>descr}" />
                    <Text text="{odaDocs>tBreve}" />
                    <Text text="{odaDocs>qta}" />
                    <Text text="{odaDocs>um}" />
                    <Text text="{odaDocs>prz}" />
                    <Text text="{odaDocs>consegna}" />
                    <Text text="{odaDocs>ordAcq}" />
                    <Text text="{odaDocs>pos}" />
                    <Text text="{odaDocs>eMerci}" />
                    <Text text="{odaDocs>pos2}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>

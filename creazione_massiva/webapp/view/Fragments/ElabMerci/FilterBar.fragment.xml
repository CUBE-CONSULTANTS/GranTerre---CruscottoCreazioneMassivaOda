<core:FragmentDefinition
  xmlns:unified="sap.ui.unified"
  xmlns:upload="sap.m.upload"
  xmlns:core="sap.ui.core"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns="sap.m"
  xmlns:f="sap.f"
>

  <f:DynamicPageHeader pinnable="false">
           
    <fb:FilterBar
      id="filterbar"
      search="btnGoSearch"
      filterChange="onChangeFilter"
      showClearOnFB="true"
      defaultSpan="XL12 L8 M8 S8"
      showFilterConfiguration="false"
      useToolbar="false"
      clear="onFilterBarClear"
    >
      <fb:filterGroupItems>
        <fb:FilterGroupItem
          visibleInFilterBar="true"
          name="oda"
          label="{i18n>oda}"
          groupName="Group1"
        >
          <fb:control>
            <Input
              showValueHelp="true"
              value="{filterModel>/oda}"
            />
          </fb:control>
        </fb:FilterGroupItem>
        <fb:FilterGroupItem
          visibleInFilterBar="true"
          name="simulazione"
          label="{i18n>Simulazione}"
          groupName="Group2"
        >
          <fb:control>
            <CheckBox             
              select="onSimulazioneCheck"
            />
          </fb:control>
        </fb:FilterGroupItem>
      </fb:filterGroupItems>
    </fb:FilterBar>
  

  

  </f:DynamicPageHeader>
</core:FragmentDefinition>
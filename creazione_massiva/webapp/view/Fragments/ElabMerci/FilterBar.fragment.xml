<core:FragmentDefinition
  xmlns:unified="sap.ui.unified"
  xmlns:upload="sap.m.upload"
  xmlns:core="sap.ui.core"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns="sap.m"
  xmlns:f="sap.f"
>

  <f:DynamicPageHeader pinnable="false">
    <VBox direction="Row" justifyContent="SpaceAround" >
      <HBox width="50%" class="prova" justifyContent="Center"
      >        
    <fb:FilterBar
      id="filterbar"
      search="btnGoSearch"
      filterChange="onChangeFilter"
      showClearOnFB="true"
      defaultSpan="XL8 L8 M8 S8"
      showFilterConfiguration="false"
      useToolbar="false"
    >
      <fb:filterGroupItems>
        <fb:FilterGroupItem
          visibleInFilterBar="true"
          name="oda"
          label="{i18n>oda}"
          groupName="Group1"
        >
          <fb:control>
            <Input
              showValueHelp="true"
              value="{filterModel>oda}"
            />
          </fb:control>
        </fb:FilterGroupItem>
        <fb:FilterGroupItem
          visibleInFilterBar="true"
          name="simulazione"
          label="{i18n>Simulazione}"
          groupName="Group2"
        >
          <fb:control>
            <CheckBox             
              select="onSimulazioneCheck"
            />
          </fb:control>
        </fb:FilterGroupItem>
      </fb:filterGroupItems>
    </fb:FilterBar>
    </HBox>

    <HBox width="50%" class="sapUiMediumMarginBegin" justifyContent="Center">
    <fb:FilterBar
      id="filterbar2"
      search="btnGoSearch"
      filterChange="onChangeFilter"
      showClearOnFB="true"
      defaultSpan="XL12 L8 M8 S8"
      showFilterConfiguration="false"
      useToolbar="false"
    >
      <fb:filterGroupItems>
        <fb:FilterGroupItem
          visibleInFilterBar="true"
          name="tipoDoc"
          label="{i18n>tipoDocumento}"
          groupName="Group1"
        >
          <fb:control>
            <ComboBox value="{filterModel>tipoDocumento}"/>
          </fb:control>
        </fb:FilterGroupItem>
       
      </fb:filterGroupItems>
    </fb:FilterBar>
  </HBox>
  </VBox>
  </f:DynamicPageHeader>
</core:FragmentDefinition>
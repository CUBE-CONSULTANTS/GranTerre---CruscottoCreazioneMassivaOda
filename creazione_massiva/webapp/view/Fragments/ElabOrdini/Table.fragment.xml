<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
>
    <Table
        id="tableOda"
        rows="{odaDocs>/dati}"    
        alternateRowColors="true"
        selectionMode="MultiToggle"
        rowSelectionChange="onSelectOda"
        visible="true"
        class="sapUiTinyMarginTop"
        width="100%"      
    >
    <extension>
      <m:OverflowToolbar height="6vh">
        <m:Text class="tableHeader sapUiResponsiveMargin"  text="{= ${filterModel>/simulazione} ? ${i18n>modSim} + ' ' + ${i18n>tableH} : ${i18n>tableH} }"></m:Text>
      </m:OverflowToolbar>
    </extension>
        <columns>
            <Column hAlign="Center" width="4rem">
                <m:Text text="{i18n>Stato}" />
                  <template>
                    <core:Icon
                        press=".onIconPress"
                        src="{odaDocs>semaforo}"
                        size="1.3rem"
                        color="{odaDocs>color}"
                    />
                </template>
            </Column>
            <Column
                hAlign="Center" width="7rem"
            >
                <m:Text text="{i18n>Doc Acquisto}" />
                  <template>
                    <m:Text text="{odaDocs>ordAcq}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center" width="5rem"
            >
                <m:Text text="{i18n>Pos Doc Acquisto}" />
                  <template>
                    <m:Text text="{odaDocs>PosDoc}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center" width="6rem"
            >
                <m:Text text="{i18n>Doc Materiale}" />
                  <template>
                    <m:Text text="{odaDocs>DocMat}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center" width="4rem"
            >
                <m:Text text="{i18n>Pos Doc Materiale}" />
                  <template>
                    <m:Text text="{odaDocs>PosDocMat}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center" width="4rem"
            >
                <m:Text text="{i18n>Società}" />
                  <template>
                    <m:Text text="{odaDocs>Soc}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center" width="5rem"
            >
                <m:Text text="{i18n>codForn}" />
                  <template>
                    <m:Text text="{odaDocs>forn}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center" width="6rem"
            >
                <m:Text text="{i18n>Condizioni Pagamento}" />
                  <template>
                    <m:Text text="{odaDocs>condPag}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center"
                width="6rem"
            >
                <m:Text text="{i18n>Data Documento}" />
                  <template>
                    <m:Text text="{odaDocs>dataDoc}" wrapping="false"/>
                </template>
            </Column>
            <Column hAlign="Center" width="6rem">
                <m:Text text="{i18n>Tipo Documento}" />
                  <template>
                    <m:Text text="{odaDocs>tpDoc}" wrapping="false"/>
                </template>
            </Column>
            <Column
                hAlign="Center"
            >
                <m:Text text="{i18n>orgAcq}" />
                  <template>
                    <m:Text text="{odaDocs>orgAcq}" wrapping="false"/>
                </template>
            </Column>
            <Column

                </template>
            </Column>
            <Column
                hAlign="Center" width="6rem"
            >
                <m:Text text="{i18n>Data Competenza}" />
                  <template>
                    <m:Text text="{odaDocs>dataComp}" wrapping="false"/>
                </template>
            </Column>
        </columns>
        <!-- <rows>
            <ColumnListItem>
                <cells>
                    
